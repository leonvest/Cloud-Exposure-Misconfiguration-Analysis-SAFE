{
  "title": "CloudAuditFindings",
  "type": "object",
  "properties": {
    "target": { "type": "string" },
    "timestamp": { "type": "string" },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "severity": { "type": "string", "enum": ["Low", "Medium", "High", "Critical"] },
          "evidence": { "type": "array", "items": { "type": "string" } },
          "impact": { "type": "string" },
          "recommendation": { "type": "string" }
        },
        "required": ["id", "title", "severity", "impact", "recommendation"]
      }
    }
  },
  "required": ["target", "timestamp", "findings"]
}
